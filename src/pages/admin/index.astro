---
import AdminLayout from "../../layouts/AdminLayout.astro";
import { db, Partner, Payment, eq } from "astro:db";

const partnersCount = (await db.select().from(Partner)).length;
const paymentsCount = (await db.select().from(Payment)).length;
---

<AdminLayout>
    <div class="mb-8">
        <h1 class="text-3xl font-bold text-white">Dashboard</h1>
        <p class="text-gray-400 mt-1">Bienvenido al panel de administraci√≥n.</p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
        <!-- Card 1 -->
        <div
            class="bg-gray-900 border border-gray-800 p-6 rounded-xl hover:border-emerald-500/30 transition-colors"
        >
            <h3
                class="text-gray-400 text-sm font-medium uppercase tracking-wider"
            >
                Total Socios
            </h3>
            <p class="text-4xl font-bold text-white mt-2">{partnersCount}</p>
        </div>

        <!-- Card 2 -->
        <div
            class="bg-gray-900 border border-gray-800 p-6 rounded-xl hover:border-emerald-500/30 transition-colors"
        >
            <h3
                class="text-gray-400 text-sm font-medium uppercase tracking-wider"
            >
                Total Pagos Registrados
            </h3>
            <p class="text-4xl font-bold text-white mt-2">{paymentsCount}</p>
        </div>

        <!-- Actions -->
        <div
            class="bg-gradient-to-br from-emerald-900/40 to-teal-900/40 border border-emerald-500/20 p-6 rounded-xl flex flex-col justify-center items-start"
        >
            <a
                href="/admin/partners"
                class="inline-flex items-center justify-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-emerald-600 hover:bg-emerald-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-emerald-500 transition-colors"
            >
                Gestionar Socios
            </a>
        </div>
    </div>
</AdminLayout>
