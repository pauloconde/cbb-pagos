---
import AdminLayout from "../../layouts/AdminLayout.astro";
import { db } from "../../db";
import { Partner, Payment } from "../../db/schema";
import { eq, desc } from "drizzle-orm";

// Handle Form Submission (Add Payment)
let message = "";
if (Astro.request.method === "POST") {
    const formData = await Astro.request.formData();
    const action = formData.get("action");

    if (action === "create_payment") {
        const partnerId = Number(formData.get("partnerId"));
        const year = Number(formData.get("year"));
        const month = Number(formData.get("month"));
        const amount = Number(formData.get("amount"));

        if (partnerId && year && !isNaN(month) && amount) {
            try {
                await db.insert(Payment).values({
                    partnerId,
                    year,
                    month,
                    amount,
                    date: new Date(),
                    currency: "USD",
                    method: "efectivo",
                });
                message = "Pago registrado exitosamente.";
            } catch (e) {
                console.error("Error creating payment", e);
                message = "Error al registrar el pago.";
            }
        }
    }
}

// Fetch Partners for Select
const partners = await db
    .select()
    .from(Partner)
    .where(eq(Partner.active, true));
const partnerIdParam = Astro.url.searchParams.get("partnerId");
const selectedPartnerId = partnerIdParam ? Number(partnerIdParam) : null;

const currentYear = new Date().getFullYear();
const currentMonth = new Date().getMonth();
const months = [
    { index: 0, name: "Enero" },
    { index: 1, name: "Febrero" },
    { index: 2, name: "Marzo" },
    { index: 3, name: "Abril" },
    { index: 4, name: "Mayo" },
    { index: 5, name: "Junio" },
    { index: 6, name: "Julio" },
    { index: 7, name: "Agosto" },
    { index: 8, name: "Septiembre" },
    { index: 9, name: "Octubre" },
    { index: 10, name: "Noviembre" },
    { index: 11, name: "Diciembre" },
];

// Check if payment was deleted
const deleted = Astro.url.searchParams.get("deleted") === "true";
if (deleted && !message) {
    message = "Pago eliminado exitosamente.";
}

// Fetch all payments with partner info
const allPayments = await db
    .select({
        id: Payment.id,
        partnerId: Payment.partnerId,
        partnerName: Partner.name,
        partnerCedula: Partner.cedula,
        amount: Payment.amount,
        currency: Payment.currency,
        method: Payment.method,
        month: Payment.month,
        year: Payment.year,
        date: Payment.date,
    })
    .from(Payment)
    .leftJoin(Partner, eq(Payment.partnerId, Partner.id))
    .orderBy(desc(Payment.date));
---

<AdminLayout>
    <div class="mb-8">
        <h1 class="text-3xl font-bold text-white">Registrar Pago</h1>
        <p class="text-gray-400 mt-1">
            Registra los pagos mensuales de los socios.
        </p>
    </div>

    {
        message && (
            <div
                class={`p-4 mb-6 rounded-lg ${message.includes("Error") ? "bg-red-900/50 text-red-200 border border-red-700" : "bg-emerald-900/50 text-emerald-200 border border-emerald-700"}`}
            >
                {message}
            </div>
        )
    }

    <div
        class="bg-gray-900 border border-gray-800 rounded-xl p-6 md:p-8 max-w-2xl"
    >
        <form method="post" class="space-y-6">
            <input type="hidden" name="action" value="create_payment" />

            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <!-- Select Partner -->
                <div class="space-y-2 md:col-span-2">
                    <label
                        for="partnerId"
                        class="text-sm font-medium text-gray-300 block"
                        >Socio</label
                    >
                    <select
                        id="partnerId"
                        name="partnerId"
                        required
                        class="w-full bg-gray-800 border border-gray-700 text-white rounded-lg focus:ring-emerald-500 focus:border-emerald-500 block p-2.5"
                    >
                        <option value="">Seleccionar Socio</option>
                        {
                            partners.map((p) => (
                                <option
                                    value={p.id}
                                    selected={p.id === selectedPartnerId}
                                >
                                    {p.name} ({p.cedula})
                                </option>
                            ))
                        }
                    </select>
                </div>

                <!-- Year -->
                <div class="space-y-2">
                    <label
                        for="year"
                        class="text-sm font-medium text-gray-300 block"
                        >Año</label
                    >
                    <input
                        type="number"
                        id="year"
                        name="year"
                        required
                        value={currentYear}
                        class="w-full bg-gray-800 border border-gray-700 text-white rounded-lg focus:ring-emerald-500 focus:border-emerald-500 block p-2.5"
                    />
                </div>

                <!-- Month -->
                <div class="space-y-2">
                    <label
                        for="month"
                        class="text-sm font-medium text-gray-300 block"
                        >Mes</label
                    >
                    <select
                        id="month"
                        name="month"
                        required
                        class="w-full bg-gray-800 border border-gray-700 text-white rounded-lg focus:ring-emerald-500 focus:border-emerald-500 block p-2.5"
                    >
                        {
                            months.map((m) => (
                                <option
                                    value={m.index}
                                    selected={m.index === currentMonth}
                                >
                                    {m.name}
                                </option>
                            ))
                        }
                    </select>
                </div>

                <!-- Amount -->
                <div class="space-y-2 md:col-span-2">
                    <label
                        for="amount"
                        class="text-sm font-medium text-gray-300 block"
                        >Monto</label
                    >
                    <div class="relative">
                        <div
                            class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none"
                        >
                            <span class="text-gray-500">$</span>
                        </div>
                        <input
                            type="number"
                            id="amount"
                            name="amount"
                            required
                            step="0.01"
                            class="w-full bg-gray-800 border border-gray-700 text-white rounded-lg focus:ring-emerald-500 focus:border-emerald-500 block p-2.5 pl-8"
                            placeholder="0.00"
                        />
                    </div>
                </div>
            </div>

            <div class="pt-4 flex justify-end">
                <button
                    type="submit"
                    class="px-6 py-3 bg-emerald-600 hover:bg-emerald-700 text-white rounded-lg text-sm font-bold transition-all transform hover:scale-[1.02] shadow-lg shadow-emerald-500/20 w-full md:w-auto"
                >
                    Registrar Pago
                </button>
            </div>
        </form>
    </div>

    <!-- Lista de Pagos Existentes -->
    <div class="mt-10">
        <h2 class="text-2xl font-bold text-white mb-6">Pagos Registrados</h2>

        <div
            class="bg-gray-900 border border-gray-800 rounded-xl overflow-hidden"
        >
            {
                allPayments.length > 0 ? (
                    <div class="overflow-x-auto">
                        <table class="w-full text-left">
                            <thead class="bg-gray-800/50 border-b border-gray-700">
                                <tr>
                                    <th class="p-4 text-sm font-semibold text-gray-300">
                                        Socio
                                    </th>
                                    <th class="p-4 text-sm font-semibold text-gray-300">
                                        Período
                                    </th>
                                    <th class="p-4 text-sm font-semibold text-gray-300">
                                        Monto
                                    </th>
                                    <th class="p-4 text-sm font-semibold text-gray-300">
                                        Método
                                    </th>
                                    <th class="p-4 text-sm font-semibold text-gray-300">
                                        Fecha
                                    </th>
                                    <th class="p-4 text-sm font-semibold text-gray-300 text-center">
                                        Acciones
                                    </th>
                                </tr>
                            </thead>
                            <tbody class="divide-y divide-gray-800">
                                {allPayments.map((payment) => (
                                    <tr class="hover:bg-gray-800/50 transition-colors">
                                        <td class="p-4">
                                            <div class="text-white font-medium">
                                                {payment.partnerName || "N/A"}
                                            </div>
                                            <div class="text-gray-500 text-xs">
                                                {payment.partnerCedula || ""}
                                            </div>
                                        </td>
                                        <td class="p-4 text-gray-300">
                                            {months[payment.month].name}{" "}
                                            {payment.year}
                                        </td>
                                        <td class="p-4">
                                            <span class="text-emerald-400 font-semibold">
                                                ${payment.amount.toFixed(2)}{" "}
                                                {payment.currency}
                                            </span>
                                        </td>
                                        <td class="p-4 text-gray-400 capitalize">
                                            {payment.method}
                                        </td>
                                        <td class="p-4 text-gray-400 text-sm">
                                            {payment.date.toLocaleDateString(
                                                "es-VE",
                                            )}
                                        </td>
                                        <td class="p-4 text-center">
                                            <form
                                                method="post"
                                                action="/api/delete-payment"
                                                onsubmit="return confirm('¿Estás seguro de que deseas eliminar este pago?');"
                                                class="inline"
                                            >
                                                <input
                                                    type="hidden"
                                                    name="paymentId"
                                                    value={payment.id}
                                                />
                                                <button
                                                    type="submit"
                                                    class="p-2 text-red-400 hover:text-red-300 hover:bg-red-500/10 rounded-lg transition-colors"
                                                    title="Eliminar pago"
                                                >
                                                    <svg
                                                        xmlns="http://www.w3.org/2000/svg"
                                                        class="h-5 w-5"
                                                        viewBox="0 0 20 20"
                                                        fill="currentColor"
                                                    >
                                                        <path
                                                            fill-rule="evenodd"
                                                            d="M9 2a1 1 0 00-.894.553L7.382 4H4a1 1 0 000 2v10a2 2 0 002 2h8a2 2 0 002-2V6a1 1 0 100-2h-3.382l-.724-1.447A1 1 0 0011 2H9zM7 8a1 1 0 012 0v6a1 1 0 11-2 0V8zm5-1a1 1 0 00-1 1v6a1 1 0 102 0V8a1 1 0 00-1-1z"
                                                            clip-rule="evenodd"
                                                        />
                                                    </svg>
                                                </button>
                                            </form>
                                        </td>
                                    </tr>
                                ))}
                            </tbody>
                        </table>
                    </div>
                ) : (
                    <div class="p-8 text-center text-gray-500">
                        No hay pagos registrados aún.
                    </div>
                )
            }
        </div>
    </div>
</AdminLayout>
